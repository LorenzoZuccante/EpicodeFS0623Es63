@model ScarpaMondo.Models.Articolo

<h2>Elimina Articolo</h2>

<h3>Sei sicuro di voler eliminare l'articolo: @Model.Nome?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ArticoloId" />
    <button type="submit" class="btn btn-danger">Elimina definitivamente</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
